{
	"manifest_version": 2,
	"name": "Reuters_Recommendations",
	"description": "This extension allows a user to get recommendations through the Babel recommendation system on Reuters' Web of Science site",
	"version": "1.1",

	"permissions": [
		"activeTab",
		"tabs",
		"http://apps.webofknowledge.com.offcampus.lib.washington.edu/full_record.do?*",
		"http://apps.webofknowledge.com/full_record.do?*",
		"https://apps.webofknowledge.com.offcampus.lib.washington.edu/full_record.do?*",
		"https://apps.webofknowledge.com/full_record.do?*",
		"http://52.73.252.5/*",
		"storage"
	],

	"content_scripts": [
		{
			"matches": [
				"http://apps.webofknowledge.com.offcampus.lib.washington.edu/full_record.do?*",
				"http://apps.webofknowledge.com/full_record.do?*"
				"https://apps.webofknowledge.com.offcampus.lib.washington.edu/full_record.do?*",
				"https://apps.webofknowledge.com/full_record.do?*"
			],
			"js": ["content.js"],
			"css": ["Babel_Widget.css"]
		}
	],

	"options_ui": {
		"page": "options.html",
		"chrome_style": true 
	},

	"web_accessible_resources": ["logo.png"]

}
